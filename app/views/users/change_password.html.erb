<h1>Change Password</h1>
<%=form_for(current_user, :url=>{:controller=>"users", :action=>"change_password"}) do   |f|   %>
<div><%=label_tag :old_password %><br />
  <%= password_field_tag :old_password %></div>
 <div><%= f.label      :new_password %><br />
  <%= f.password_field :password %></div>
 <div><%= f.label :confirm_password %><br />
  <%= f.password_field :password_confirmation %></div>
<%=f.submit "change password"%>
<%end%>